@model IEnumerable<Infrastructure.Models.Product>

@{
    ViewData["Title"] = "Products";
}
<h1>@ViewData["Title"]</h1>
@if (ViewBag.Success != null)
{
    <h3 class="alert alert-success">
        @ViewBag.Success
    </h3>
}
@if (ViewBag.Error != null)
{
    <h3 class="alert alert-danger">
        @ViewBag.Error
    </h3>
}
<p>
    <a asp-action="Create" class="btn btn-primary">Add new Product</a>
    <a asp-action="GetBackUp" class="btn btn-primary">GetBackUp</a>
</p>
<section class="basic-datatable">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Products</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body card-dashboard">
            <table class="table display" style="width:100%" id="m_table_1">
                <thead>
                    <tr>
                        <th>
                            Product Name
                        </th>
                        <th>
                            Product Image
                        </th>
                        <th>
                            Product Description
                        </th>
                      
                       
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProductName)
                            </td>
                            <td>
                                <img src="@item.ProductImage" width="100" height="100" alt="@item.ProductImage">
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProductDescription)
                            </td>
                          
                            <td>
                                <a class="btn btn-primary mb-1" asp-action="Edit" asp-route-id="@item.ProductId">Update</a>
                               
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>